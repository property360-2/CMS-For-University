        "url": {
          "raw": "http://localhost:8000/api/sections/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "sections", ""]
        }
      }
    },
    {
      "name": "Add Section Manually",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer <access_token>" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"page\": \"<page_uuid_here>\",\n  \"type\": \"paragraph\",\n  \"properties\": {\"text\": \"Extra section text\"},\n  \"order\": 4\n}"
