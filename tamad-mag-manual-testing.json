        "header": [
          { "key": "Authorization", "value": "Bearer <access_token>" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Admissions Template\",\n  \"description\": \"Template for admissions page\",\n  \"structure\": [\n    {\"type\": \"heading\", \"properties\": {\"text\": \"Welcome to Admissions\"}},\n    {\"type\": \"paragraph\", \"properties\": {\"text\": \"Please fill in your details.\"}},\n    {\"type\": \"button\", \"properties\": {\"text\": \"Apply Now\", \"url\": \"/apply\"}}\n  ],\n  \"theme\": \"default\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/templates/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "templates", ""]
        }
      }
    },
    {
      "name": "List Templates",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer <access_token>" }
        ],
        "url": {
          "raw": "http://localhost:8000/api/templates/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "templates", ""]
        }
      }
    },
    {
      "name": "Create Page from Template",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer <access_token>" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Admissions Page 2025\",\n  \"slug\": \"admissions-2025\",\n  \"template\": \"<template_uuid_here>\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/pages/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "pages", ""]
        }
      }
    },
    {
      "name": "List Pages",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer <access_token>" }
        ],
        "url": {
          "raw": "http://localhost:8000/api/pages/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
